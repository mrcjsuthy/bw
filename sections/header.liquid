{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}

<header class="site-header" style="background-color: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="site-header__content">
      <div class="site-header__logo">
        {%- if section.settings.logo != blank -%}
          <a href="/" class="site-header__logo-link">
            {{ section.settings.logo | image_url: width: 200 | image_tag:
              loading: 'lazy',
              width: 200,
              height: 'auto',
              alt: shop.name
            }}
          </a>
        {%- else -%}
          <a href="/" class="site-header__shop-name">{{ shop.name }}</a>
        {%- endif -%}
      </div>

      {% render 'main-navigation' %}

      <div class="site-header__icons">
        <a href="/search" class="site-header__icon">
          {% render 'icon-search' %}
        </a>
        <a href="/account" class="site-header__icon">
          {% render 'icon-account' %}
        </a>
        <a href="/cart" class="site-header__icon">
          {% render 'icon-cart' %}
          <span class="cart-count">{{ cart.item_count }}</span>
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 1px solid var(--color-border);
  }

  .site-header__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0;
  }

  .site-header__logo {
    flex: 0 0 auto;
  }

  .site-header__logo-link {
    display: block;
  }

  .site-header__shop-name {
    font-size: 1.5rem;
    font-weight: 600;
    text-decoration: none;
    color: var(--color-text);
  }

  .site-header__icons {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .site-header__icon {
    position: relative;
    color: var(--color-text);
    text-decoration: none;
  }

  .cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: var(--color-primary);
    color: white;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 1rem;
  }
</style>
